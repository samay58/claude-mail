# Authentication Method (imap or oauth)
AUTH_METHOD=imap

# IMAP Configuration (Recommended - App Password Method)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_TLS=true
IMAP_USER=your-email@gmail.com
IMAP_PASSWORD=your-16-char-app-password

# Gmail OAuth2 (Alternative - Requires Verification)
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost
GMAIL_REFRESH_TOKEN=
GMAIL_USER_EMAIL=me

# Log root (override if you want a custom location)
LOG_ROOT=../../data/logs

# Claude API Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key

